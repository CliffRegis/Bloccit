<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  
  <div class="row">
    <div class="col-md-8">  
      <h3> Comments:</h3>  
        <% @comments.each do |comment| %>
        <div class="media">
          <div class="media-body">
            <h5 class="media-heading">
            <%= comment.body%>  
            <%= link_to "Delete",[comment.post, comment], :confirm => 'Are you sure?', :method => :delete, remote: true %>
            </h5>      
          </div>
        </div>
        <% end %>
        
<% end %>

  