<h1><%= markdown @post.title %></h1> 
<p> <%= markdown @post.body%></p>   
<div class="row">
    <div class="col-md-8">  
      <h3> Comments:</h3>  
        <% @comments.each do |comment| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
            <%= comment.body%>
            </h4>
        <% end %>
          </div>
        </div>

        <div class="col-md-8">
     <%= render :partial => "comments/form", locals: {post: @post, comment: @comment}, class: 'btn btn-success' %>
        
   </div>
</div>


